<Window x:Class="ResourceKeysBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ResourceKeysBox"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Click="OnOpenClick" Header="_Open" />
            </MenuItem>
        </Menu>

        <TabControl>
            <TabItem Header="SystemColors">
                <ContentPresenter Content="{Binding SystemColors.KeyAndColorResources}" />
            </TabItem>

            <TabItem Header="Resource dictionary" >
                <ContentPresenter Content="{Binding FromFile.KeyAndColorResources}" />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
